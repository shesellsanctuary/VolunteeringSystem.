@model IEnumerable<Kid>
@{
	ViewData["Title"] = "Crianças";
	Layout = "_LayoutAdmin";
}

<h2>Crianças</h2>

<div class="panel panel-default">
    <table class="table">
        <tr>
            <th>Nome</th>
            <th>Sexo</th>
            <th>Nascimento</th>
            <th>Disponibilidade</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.name</td>
                <td>@item.sex</td>
                <td>@item.birthDate.ToShortDateString()</td>
                <td>@item.availability</td>
            </tr>
        }
    </table>
</div>